

/**movieinfo**/
.wrap{
    background:#e8e8e8;
}
.item-ticket{
   

    background:4DB3AE;
}
.item-ticket text{
    display:block;
    height:88rpx;
    line-height:88rpx;
    text-align:center;
    background:#4DB3AE;
    color:white;
  
}
.info-show{
    background:#fff;
    padding:30rpx 20rpx;
    margin-top:20rpx;
}
.info-show  .img-box {
  width: 120rpx;
  height: 160rpx;
 
}
.info-show .item-flexbox .img-box{
    margin-right:10rpx;
}

.info-show .jobinfo .img-box{
    height:auto;
    background:white;
}
.info-show .jobinfo .img-box image{
    display:block;
    height:160rpx;
}
.info-show .jobinfo .img-box .name,
.info-show .jobinfo .img-box .job{
    display:block;
    text-align:center;
    font-size:20rpx;
    padding:10rpx 0 0;
}
.info-show .jobinfo .img-box .job{
    color:#999;
}

.movietxt{
    background:#fff;
    padding:30rpx 20rpx;
    position:relative;
}
.movietxt:after{
    content:'';
    display:block;
    margin:20rpx auto 0;
    width:20rpx;
    height:20rpx;
    border-left:6rpx solid #e5e5e5;
    border-top:6rpx solid #e5e5e5;
    transform: rotate(-135deg);
}
.hide-txt{
    display:-webkit-box !important;
  overflow:hidden;
  text-overflow:ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -moz-box-orient: vertical;
  -webkit-line-clamp:3;
}
.movietxt text{
    line-height:1.2;
}
.movieinfobox .blurimg{
-webkit-filter: blur(20px) opacity(30%);
    filter: blur(20px) opacity(30%);
    position:absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
    z-index: 0;
    width:100%;
    
}
.movieinfobox{
     
   position:relative;
    height:360rpx;
    overflow:hidden;
    color:white;
    -webkit-box-sizing:border-box;
    box-sizing:border-box;
    padding:30rpx 20rpx;
    
}
.movieinfobox .img-box{
    width:214rpx;
    height:300rpx;
    border:2rpx solid #fff;
}
.movieinfobox .item-bar,
.movieinfobox .item-content{
    position:relative;
    z-index: 1;
}
.movieinfobox .item-bar{
    margin-right:20rpx;
    
}
.movieinfobox .name{
    font-size:34rpx;
}
.movieinfobox .otherinfo{
    padding:10px 0 20rpx;
}
.movieinfobox .form,
.movieinfobox .time{
    font-size:24rpx;
    display:block;
    padding:0 0 20rpx  ;
}