/** common.wxss **/
/*view, scroll-view, swiper, icon, text, progress*/

@import 'style/base.wxss';



page {
  overflow: hidden;
  height: 100%;
  background:white;
  font-family: "San Francisco", "Helvetica Neue", sans-serif, Arial, Verdana, "Trebuchet MS", "Microsoft YaHei", "STXihei";
}

view,
text{
  font-size:28rpx;
  line-height:1;
}
.wrap{
  height:100%;
}
.scroll-y{
  min-height:50%;
}



a, a:hover {
  text-decoration: none;
  outline: none; 
}

a, input, textarea {
  -webkit-tap-highlight-color: transparent;
}

fieldset, input, select, option {
  outline: none;
  border: none;
  padding: 0;
  margin: 0;
}

select, input, label {
  vertical-align: middle;
}

button {
  vertical-align: middle;
  padding: 0;
  outline: none;
}

img {
  vertical-align: middle;
}

.bg-body, .bg-schedule {
  background-color: #ffffff;
}

.bg-grey {
  background-color: #f9f9f9; }

.bg-seat {
  background-color: #e9e9e9; }

.user-select-text {
  -webkit-user-select: text; }

.user-select-none {
  -webkit-user-select: none; }

.m-show {
  display: block;
  opacity: 1; }

.m-hide {
  display: none;
  opacity: 0; }

.clearfix:after, .recharge-card-box dl:after, .orders-detail:after, .orders-detail ul:after, .pay-box li:after {
  content: ".";
  display: block;
  vertical-align: top;
  height: 0;
  font-size: 0;
  line-height: 0;
  overflow: hidden;
  clear: both;
  visibility: hidden; }

html {
  font-size: 20px; }

@media screen and (min-width: 321px) and (max-width: 375px) {
  html {
    font-size: 23.4375px; } }
@media screen and (min-width: 376px) and (max-width: 767px) {
  html {
    font-size: 25.4375px; } }
@media only screen and (min-width: 768px) {
  html {
    font-size: 27.5px; } }
.container {
  margin: 0 0.5rem; }

.mod {
  padding: 0 0.5rem; }

.clearfix:after {
    content: ".";
    display: block;
    vertical-align: top;
    height: 0;
    font-size: 0;
    line-height: 0;
    overflow: hidden;
    clear: both;
    visibility: hidden;
}
