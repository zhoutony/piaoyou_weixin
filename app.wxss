.btn-close, .btn-close-seat, .btn-success-close, .seat, .iconfont {
    font-family: iconfont;
    speak: none;
    font-style: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    vertical-align: middle;
    display: inline-block;
}

.iconmoon {
    font-family: iconmoon;
    speak: none;
    font-style: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    vertical-align: middle;
    display: inline-block
}
.btn-theme {
    background-color: #2ebdd7;
    border: 1px solid #2ebdd7;
    text-align: center;
}
.btn-disabled, .btn-theme {
    margin: .5rem auto;
    height: 1.75rem;
    line-height: 1.75rem;
    color: #fff;
    font-size: 0.75rem;
}
.btn-solid {
    border-radius: .125rem;
    display: block;
    outline: 0;
}