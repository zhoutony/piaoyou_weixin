.item-link, .item-flexbox, .item-flexbox-v, .item-flexbox-v-c,
.item-flexbox-vh-c, .item-flexbox-h-c {
  display: -webkit-flex;
  display: flex;
}

.item-flexbox-v {
  -webkit-flex-direction: column;
  flex-direction: column;
}

.item-flexbox-v-c {
  -webkit-align-items: center;
  align-items: center;
}

.item-flexbox-h-c {
  -webkit-justify-content: center;
  justify-content: center;
}

.con-block, .item-flex {
  -webkit-flex: 1;
  flex: 1;
}

.item-flex-0 {
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
}

.item-flexbox-vh-c {
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
}

.item-flex-nowrap{
    -webkit-flex-wrap:nowrap;
    flex-wrap:nowrap;
}
.item-flex-wrap{
    -webkit-flex-wrap:wrap;
    flex-wrap:wrap;
}