.img-box {
  background: #888;
}

.img-box image {
  width: 100%;
  height: 100%;
}

.ellipsis, .ellipsis-1, .ellipsis-2, .ellipsis-3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.ellipsis-1 {
  -webkit-line-clamp: 1;
}

.ellipsis-2 {
  -webkit-line-clamp: 2;
}

.ellipsis-3 {
  -webkit-line-clamp: 3;
}

