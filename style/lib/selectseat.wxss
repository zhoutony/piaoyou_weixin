/**座位图 Begin**/
.seat-scroll {
	background: #e9e9e9;
	-webkit-flex: 1;
	flex: 1;
	padding: 0;
}
.temp-ticket,
.temp-ticket .seat-tr,
.temp-ticket .seat-txt {
	display: -webkit-flex;
	display: flex;
}
.temp-ticket { padding: 20rpx 15rpx 20rpx 20rpx; }
.temp-ticket .number {
	border-radius: 60rpx;
	overflow: hidden;
	width: 60rpx;
}
.temp-ticket .number text {
	display: block;
	background: rgba(0, 0, 0, 0.6);
	color: white;
	font-size: 24rpx;
	text-align: center;
	width: 60rpx;
	height: 72rpx;
	line-height: 40px;
}
.temp-ticket .seats {
	-webkit-flex: 1;
	flex: 1;
	overflow: hidden;
}
.temp-ticket .seat-table {
	white-space: nowrap;
}
.temp-ticket .seat-tr {
	white-space: nowrap;
	-webkit-flex-wrap: nowrap;
	flex-wrap: nowrap;
}
.temp-ticket .seat-td {
	margin: 12rpx 2rpx 0 10rpx;
	position: relative;
}
.temp-ticket .seat-txt {
	position: absolute;
	top: 5rpx;
	right: 0;
	bottom: 0;
	left: 0;
	-webkit-flex-direction: column;
	flex-direction: column;
	-webkit-justify-content: center;
	justify-content: center;
	-webkit-align-items: center;
	align-items: center;
}
.temp-ticket .seat-txt text {
	display: block;
	color: #888;
	font-size: 18rpx;
	line-height: 1.3;
}
/**座位
  seat-txt            座位文字 
  seat                普通座位
  select-seat         选中座位
  lock-seat           不可选座位
  empty-seat          空置座位
  love-seat           情侣座位
  love-select-seat    情侣座位选中
  love-lock-seat      情侣座位不可选
**/
.seat,
.select-seat,
.lock-seat,
.empty-seat,
.love-seat,
.love-select-seat,
.love-lock-seat {
	display: block;
	width: 60rpx;
	height: 60rpx;
}
.seat {
	background: url(http://js.moviefan.com.cn/piaoyou_fe/images/set03.png) no-repeat 0 0;
	background-size: 100% auto;
}
.select-seat {
	background: url(http://js.moviefan.com.cn/piaoyou_fe/images/set03.png)no-repeat 0 0;
	background-size: 100% auto;
}
.lock-seat {
	background: url(http://js.moviefan.com.cn/piaoyou_fe/images/set03.png) no-repeat 0 0;
	background-size: 100% auto;
}
.love-seat {
	background: url(http://js.moviefan.com.cn/piaoyou_fe/images/set03.png) no-repeat 0 0;
	background-size: 100% auto;
}
.love-select-seat {
	background: url(http://js.moviefan.com.cn/piaoyou_fe/images/set03.png) no-repeat 0 0;
	background-size: 100% auto;
}
.love-lock-seat {
	background: url(http://js.moviefan.com.cn/piaoyou_fe/images/set03.png) no-repeat 0 0;
	background-size: 100% auto;
}
.love-seat,
.love-select-seat,
.love-lock-seat { width: 132rpx; }

.zoomin .number,
.zoomin .seat-table {
	transform: scale(0.5);
	transform-origin: 0 0;
}
.zoomin .numbar,
.zoomin .numbar text { width: 30rpx; }
.zoomin .seats { margin-left: -20rpx; }
